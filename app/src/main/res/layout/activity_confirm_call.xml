<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_dark">

    <!-- Center Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Warning Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_call"
            android:tint="@color/accent"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming CRM Call"
            android:textColor="@color/text_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Contact Number -->
        <TextView
            android:id="@+id/contactNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call +971 50 123 4567?"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This will start a conference call"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="48dp" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Decline Button -->
            <Button
                android:id="@+id/declineCallButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="DECLINE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:backgroundTint="@color/error" />

            <!-- Accept Button -->
            <Button
                android:id="@+id/acceptCallButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ACCEPT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:backgroundTint="@color/accent" />

        </LinearLayout>

        <!-- Auto-decline notice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-declines in 30 seconds"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</RelativeLayout>

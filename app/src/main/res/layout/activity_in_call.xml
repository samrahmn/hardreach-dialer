<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <!-- Call Info Section -->
    <LinearLayout
        android:id="@+id/call_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+971 50 123 4567"
            android:textColor="#B0B0B0"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- Call Duration -->
        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Control Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!-- Row 1: Mute, Dialpad, Speaker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Mute Button -->
            <LinearLayout
                android:id="@+id/btn_mute_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:backgroundTint="#424242"
                    android:tint="#FFFFFF"
                    app:fabSize="normal" />

                <TextView
                    android:id="@+id/label_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Dialpad Button -->
            <LinearLayout
                android:id="@+id/btn_dialpad_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_dialpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:backgroundTint="#424242"
                    android:tint="#FFFFFF"
                    app:fabSize="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dialpad"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Speaker Button -->
            <LinearLayout
                android:id="@+id/btn_speaker_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:backgroundTint="#424242"
                    android:tint="#FFFFFF"
                    app:fabSize="normal" />

                <TextView
                    android:id="@+id/label_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Hold, Add Call, (empty) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <!-- Hold Button -->
            <LinearLayout
                android:id="@+id/btn_hold_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_pause"
                    android:backgroundTint="#424242"
                    android:tint="#FFFFFF"
                    app:fabSize="normal" />

                <TextView
                    android:id="@+id/label_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Add Call Button -->
            <LinearLayout
                android:id="@+id/btn_add_call_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    android:backgroundTint="#424242"
                    android:tint="#FFFFFF"
                    app:fabSize="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Call"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Empty space for symmetry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- End Call Button (Large, Red) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="#F44336"
            android:tint="#FFFFFF"
            app:fabSize="normal"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- In-Call Dialpad Overlay (Hidden by default) -->
    <LinearLayout
        android:id="@+id/in_call_dialpad_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#212121"
        android:visibility="gone"
        android:padding="16dp">

        <!-- Close Dialpad Button -->
        <ImageButton
            android:id="@+id/btn_close_dialpad"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF"
            android:layout_gravity="end" />

        <!-- Number Display -->
        <TextView
            android:id="@+id/dialpad_number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Dialpad Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="4"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true">

            <!-- Same dialpad layout as main dialer -->
            <Button
                android:id="@+id/dialpad_btn_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2\nABC"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3\nDEF"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4\nGHI"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5\nJKL"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6\nMNO"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7\nPQRS"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8\nTUV"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9\nWXYZ"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_star"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="*"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0\n+"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/dialpad_btn_hash"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="#"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Call Info Section -->
    <LinearLayout
        android:id="@+id/call_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Contact Avatar Placeholder -->
        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_avatar" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textColor="@color/text_white"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+971 50 123 4567"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="@color/status_ringing"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp" />

        <!-- Call Duration -->
        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/text_white"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/control_buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Row: Mute, Dialpad, Speaker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Mute -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    app:fabSize="normal"
                    app:backgroundTint="@color/button_inactive"
                    app:tint="@color/text_white"
                    app:elevation="4dp" />

                <TextView
                    android:id="@+id/label_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Dialpad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_dialpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_view"
                    app:fabSize="normal"
                    app:backgroundTint="@color/button_inactive"
                    app:tint="@color/text_white"
                    app:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dialpad"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Speaker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    app:fabSize="normal"
                    app:backgroundTint="@color/button_inactive"
                    app:tint="@color/text_white"
                    app:elevation="4dp" />

                <TextView
                    android:id="@+id/label_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Row: Hold, End Call, Record -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Hold -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_pause"
                    app:fabSize="mini"
                    app:backgroundTint="@color/button_inactive"
                    app:tint="@color/text_white"
                    app:elevation="4dp" />

                <TextView
                    android:id="@+id/label_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- End Call -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_end_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:fabSize="normal"
                    app:backgroundTint="@color/error"
                    app:tint="@color/text_white"
                    app:elevation="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Call"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Record -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:fabSize="mini"
                    app:backgroundTint="@color/button_inactive"
                    app:tint="@color/text_white"
                    app:elevation="4dp" />

                <TextView
                    android:id="@+id/label_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Merge Button (shown when 2 calls active) -->
        <LinearLayout
            android:id="@+id/btn_merge_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:visibility="gone">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_merge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_add"
                app:fabSize="normal"
                app:backgroundTint="@color/accent"
                app:tint="@color/text_white"
                app:elevation="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Minimize Button -->
    <Button
        android:id="@+id/btn_minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Logs"
        android:textSize="12sp"
        android:textColor="@color/text_white"
        android:background="@drawable/bg_button_secondary"
        android:padding="8dp" />

    <!-- In-call Dialpad Overlay -->
    <LinearLayout
        android:id="@+id/in_call_dialpad_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        
        <!-- Dialpad content would go here -->
        <Button
            android:id="@+id/btn_close_dialpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_gravity="end"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/dialpad_number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:padding="24dp" />
    </LinearLayout>

    <!-- Active calls list (hidden) -->
    <LinearLayout
        android:id="@+id/active_calls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/active_calls_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Timer Pill -->
    <LinearLayout
        android:id="@+id/timer_pill"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_timer_pill"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Calls List Section -->
    <LinearLayout
        android:id="@+id/calls_list_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_pill"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Primary Call -->
        <LinearLayout
            android:id="@+id/primary_call_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unknown"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/call_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333" />

        <!-- Secondary Call (hidden by default) -->
        <LinearLayout
            android:id="@+id/secondary_call_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/secondary_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unknown"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/secondary_call_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On hold"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/secondary_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Phone Number (below name) -->
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calls_list_section"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Active Calls Container (hidden, for code compatibility) -->
    <LinearLayout
        android:id="@+id/active_calls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/active_calls_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- Control Buttons Grid -->
    <LinearLayout
        android:id="@+id/control_buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <!-- Row 1: Swap, Merge, Logs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Hold/Swap -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_hold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swap"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Merge -->
            <LinearLayout
                android:id="@+id/btn_merge_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <Button
                    android:id="@+id/btn_merge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:text="â‡§"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merge calls"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Logs -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <Button
                    android:id="@+id/btn_minimize"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:text="ðŸ“‹"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Record, Mute, Contacts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Record -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_record"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Mute -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Speaker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_speaker"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/label_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Dialpad, End Call, Speaker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Dialpad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_dialpad"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- End Call -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_end_call"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_call"
                    android:background="@drawable/bg_end_call_circle"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:rotation="135" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Empty space for symmetry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- In-call Dialpad Overlay -->
    <LinearLayout
        android:id="@+id/in_call_dialpad_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_close_dialpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#4CAF50"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialpad_number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="24dp"
            android:fontFamily="sans-serif-light" />

        <!-- Dialpad Grid -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="1" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="2" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="3" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="4" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="5" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="6" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="7" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="8" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="9" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_star" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="*" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="0" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_hash" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="#" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

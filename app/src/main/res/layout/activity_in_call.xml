<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/btn_minimize"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="LOGS"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_secondary"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textAllCaps="true"
            android:letterSpacing="0.05" />
    </RelativeLayout>

    <!-- Control Buttons Section - Fixed at Bottom -->
    <LinearLayout
        android:id="@+id/control_buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp"
        android:paddingTop="20dp"
        android:background="#000000">

        <!-- Row 1: Mute, Keypad, Speaker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Mute -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="18dp" />

                <TextView
                    android:id="@+id/label_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Keypad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_dialpad"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keypad"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Speaker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_speaker"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="18dp" />

                <TextView
                    android:id="@+id/label_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Hold, End Call, Record -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Hold -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_hold"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_media_pause"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="18dp" />

                <TextView
                    android:id="@+id/label_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- End Call -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_end_call"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@drawable/bg_end_call_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Record -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_record"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="18dp" />

                <TextView
                    android:id="@+id/label_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Merge Button - MUST BE ImageButton -->
        <LinearLayout
            android:id="@+id/btn_merge_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_merge_button"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageButton
                    android:id="@+id/btn_merge"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merge Calls"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Middle Content Area - Between top bar and buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/control_buttons_section"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Call Info Section -->
            <LinearLayout
                android:id="@+id/call_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <!-- Contact Avatar -->
                <View
                    android:id="@+id/avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_avatar" />

                <!-- Contact Name -->
                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="16dp"
                    android:gravity="center" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+971 50 123 4567"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- Call Status -->
                <TextView
                    android:id="@+id/call_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calling..."
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="16dp" />

                <!-- Call Duration -->
                <TextView
                    android:id="@+id/call_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Active Calls Container - Shows when multiple calls -->
            <LinearLayout
                android:id="@+id/active_calls_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Calls"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp" />

                <LinearLayout
                    android:id="@+id/active_calls_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- In-call Dialpad Overlay -->
    <LinearLayout
        android:id="@+id/in_call_dialpad_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btn_close_dialpad"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Done"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialpad_number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="24dp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.05" />

        <!-- Dialpad Grid -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="1" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="2" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="3" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="4" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="5" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="6" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="7" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="8" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="9" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_star" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="*" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="0" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
                <Button android:id="@+id/dialpad_btn_hash" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="#" android:textSize="28sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="6dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

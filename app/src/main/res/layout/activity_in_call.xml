<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <!-- Status Bar Area -->
    <LinearLayout
        android:id="@+id/status_bar_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_minimize"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="View Logs"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- Main Call Info Section -->
    <LinearLayout
        android:id="@+id/call_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar_area"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <!-- Contact Avatar -->
        <View
            android:id="@+id/avatar_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_avatar" />

        <!-- Contact Name - Large -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:gravity="center" />

        <!-- Phone Number - Smaller -->
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+971 50 123 4567"
            android:textColor="#888888"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp" />

        <!-- Call Duration -->
        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.1"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Active Calls Container (for conference) -->
    <LinearLayout
        android:id="@+id/active_calls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_info_section"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conference Participants"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:textAllCaps="true"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:id="@+id/active_calls_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/control_buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        android:background="#1A1A1A">

        <!-- Merge Button (shown when 2 calls active) -->
        <LinearLayout
            android:id="@+id/btn_merge_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_merge"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="Merge Calls"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_merge_button" />
        </LinearLayout>

        <!-- Top Row: Mute, Dialpad, Speaker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Mute -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/label_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Dialpad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_dialpad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keypad"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Speaker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_speaker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/label_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Row: Hold, End Call, Record -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Hold -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_hold"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_media_pause"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="14dp" />

                <TextView
                    android:id="@+id/label_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- End Call -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_end_call"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@drawable/bg_end_call_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Record -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_record"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@drawable/bg_incall_button"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="14dp" />

                <TextView
                    android:id="@+id/label_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- In-call Dialpad Overlay -->
    <LinearLayout
        android:id="@+id/in_call_dialpad_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_close_dialpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/dialpad_number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="24dp"
            android:fontFamily="sans-serif-light" />

        <!-- Dialpad Buttons -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Row 1: 1 2 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="1" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="2" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="3" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
            </LinearLayout>

            <!-- Row 2: 4 5 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="4" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="5" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="6" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
            </LinearLayout>

            <!-- Row 3: 7 8 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="7" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="8" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="9" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
            </LinearLayout>

            <!-- Row 4: * 0 # -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <Button android:id="@+id/dialpad_btn_star" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="*" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="0" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
                <Button android:id="@+id/dialpad_btn_hash" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="#" android:textSize="24sp" android:textColor="#FFFFFF" android:background="@drawable/bg_dialpad_button" android:layout_margin="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Stopped"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/test_poll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test API Connection"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/text_secondary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRM Server URL"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://grow.hardreach.com"
        android:inputType="textUri" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Key"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your API key"
        android:inputType="textPassword"
        android:fontFamily="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRM Auto-Dialer"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poll for calls every 15 seconds"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <Switch
            android:id="@+id/service_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE SETTINGS"
        android:textStyle="bold"
        android:backgroundTint="@color/primary"
        android:textColor="@color/text_white"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/request_default_dialer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET AS DEFAULT DIALER"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/battery_optimization_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISABLE BATTERY OPTIMIZATION"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Call Status"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/live_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for calls..."
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:fontFamily="sans-serif-medium"
        android:textColor="#1976D2"
        android:minHeight="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Logs"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TextView
                android:id="@+id/log_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logs will appear here..."
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:textColor="#424242"
                android:padding="8dp"
                android:lineSpacingExtra="2dp" />
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
